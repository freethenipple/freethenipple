@import '../../common/uikit/font'
@import '../../common/uikit/colors'

.container
  max-width: 1200px
  margin: 0 auto
  padding: 50px 40px

  position: relative;

.box
  position: relative
  overflow: hidden

  width: 320px
  height: 320px

  border: 3px dashed color-pink

  display: flex
  justify-content: center
  align-items: center

  margin-left: 60px
  padding: 0 14px

  box-sizing: border-box

.box > button
  float: right
  width: 8em
  height: 100%

.text
  margin: 0 auto
  text-align: center

  font(font-preset[title])
  color: color-blue

.input
  position: absolute
  left: 0
  top: 0

  width: 100%
  height: 100%
  opacity: 0

  cursor: pointer

.error
  position: absolute
  top: 15px
  left: 0

  width: 320px
  text-align: center

  color: color-error

@media screen and (max-width: 800px)
  .box
    margin: 0 auto
  .container
    padding: 20px 0
