@import '../../common/uikit/colors'

.container
  max-width: 400px

  position: relative
  user-select: none

.panel
  width: 100%
  height: 30px

  background: rgba(255,190,212, 0.5)

  margin-bottom: 10px

  display: flex
  align-items: center
  justify-content: space-between

  border-radius: 3px

  box-sizing: border-box

  position: absolute
  top: -40px
  left: 0


.imageContainer
  position: relative
  width: 100%


.image
  width: 400px
  cursor: pointer


.btn
  background: transparent
  padding: 5px
  cursor: pointer

.btn path
  fill: color-white

.save
  width: 100%
  height: 40px

  color: color-white
  background-color: color-blue

  cursor: pointer
  margin-top: 10px


@media screen and (max-width: 800px)
  .container
    min-width: 100%
    padding: 0 30px
    box-sizing: border-box;
  .panel
    top: -30px
  .image
    width: 100%
